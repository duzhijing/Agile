
@{
    Layout = null;
}

<!DOCTYPE html>




<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <script src="~/Content/jquery-3.1.1.js"></script>
  
    <title>Add</title>
    <script>
        $(function () {
            $.ajax({
                //url: 'http://localhost:8088/AdminPersonService/GetAdminPerson',
                url: 'http://localhost:8088/GetAdminPerson',
                type: "get",
                success: function (data) {
                    $(data).each(function (index, data) {
                        var str = "";
                        str += "<tr>";
                        str += "<td>" + data.AdminPersonID + "</td>";
                        str += "<td>" + data.AdminPersonName + "</td>";
                        str += "<td>" + data.AdminPersonPassword + "</td>";
                        str += "<td>" + data.AdminCreateDate + "</td>";
                        str += "<td>" + data.AdminUpdate + "</td>";
                        str += "<td>" + data.AdminInfo + "</td>";
                    
                        str += "</tr>";
                        $("#td").append(str);
                    })
                }
            })
            $("#Button1").click(function () {
                $.ajax({
                    url: 'http://localhost:8088/api/AdminPersonService/AdminPersonAdd',
                    type: "post",
                    data: $("#formdata").serialize(),
                    success: function (d) {
                        if (d > 0)
                            alert('添加成功')
                    }


                })
            })
        })

    </script>
</head>
<body>



    <div>
        <form id="formdata">

            <table>
                <tr>
                    <td>登录名</td>
                    <td>
                        <input id="Text1" type="text" name="AdminPersonName" />
                    </td>
                </tr>
                <tr>
                    <td>密码</td>
                    <td>
                        <input id="Text1" type="text" name="AdminPersonPassword" />
                    </td>
                </tr>
                <tr>
                    <td>角色</td>
                    <td>
                        <input id="Text1" type="text" name="AdminCreateDate" />
                    </td>
                </tr>
                <tr>
                    <td>创建时间</td>
                    <td>
                        <input id="Text1" type="text" name="AdminUpdate" />
                    </td>
                </tr>
                <tr>
                    <td>是否启用</td>
                    <td>
                        <input id="Text1" type="text" name="AdminInfo" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="Button1" type="button" value="添加" />
                        <input id="Button2" type="button" value="显示" onclick="location.href='/Admin/index'" />
                    </td>
                </tr>
            </table>

        </form>
    </div>
</body>
</html>
